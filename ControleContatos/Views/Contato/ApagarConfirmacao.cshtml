@model Contato
@{
    ViewData["Title"] = "Confirmação apagar contato";
}
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome) ?</h3>
</div>
<a class="btn btn-success w-100 mb-2" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Contato" asp-action="Excluir" asp-route-id="@Model.ContatoId">Confirmar Exclusão</a>