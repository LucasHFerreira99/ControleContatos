@model Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Editar" method="post">
    <input type="hidden" asp-for="ContatoId" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
        @Html.ValidationMessageFor(c => c.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control">
        @Html.ValidationMessageFor(c => c.Email)
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control">
        @Html.ValidationMessageFor(c => c.Celular)
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2" asp-controller="Contato" asp-action="Editar">Alterar</button>
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>